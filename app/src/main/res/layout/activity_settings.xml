<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d2d2d">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/roboto_slab_thin"
        android:gravity="center"
        android:text="SETTINGS"
        android:textColor="#FFFFC107"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:elevation="20dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:menu="@menu/drawer"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="#FFC107"
        app:itemTextColor="#FF9800"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="75dp"
        android:layout_height="72dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/ic_share_black_24dp"
        android:onClick="toast" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="105dp"
        android:layout_height="88dp"
        android:layout_above="@+id/btn4"
        android:layout_below="@+id/text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/ic_flashlight_black_24dp"
        android:onClick="toast" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_above="@+id/btn5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/ic_notifications_active_black_24dp"
        android:onClick="toast" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_above="@+id/btn1"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/ic_saved_black_24dp"
        android:onClick="toast" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="157dp"
        android:background="@drawable/ic_headset_black_24dp"
        android:onClick="toast" />

    <Button
        android:id="@+id/btn6"
        android:onClick="toast"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:layout_above="@+id/btn3"
        android:layout_below="@+id/text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="144dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/ic_flag_black_24dp" />


</RelativeLayout>